@model Assignment2.Models.ViewModels.DeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.CanDelete)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Community</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Community.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Community.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Community.Budget)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Community.Budget)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="@Model.Community.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
else
{
    <h3>Cannot delete Community when Community still has Ads</h3>
    <a asp-action="Index">Back to List</a>
}
